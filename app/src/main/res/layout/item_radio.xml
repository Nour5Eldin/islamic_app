<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/QuranRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:text="@string/QuranRadio"
        android:fontFamily="@font/nabi"
        android:textColor="@color/TextColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:weightSum="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@id/QuranRadio">
        <ImageView
            android:id="@+id/iconPrevious"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginEnd="70dp"
            android:src="@drawable/icon_next_start"/>
        <ImageView
            android:id="@+id/iconPlay"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/icon_play"/>
        <ImageView
            android:id="@+id/iconNext"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="70dp"
            android:src="@drawable/icon_next_end"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>