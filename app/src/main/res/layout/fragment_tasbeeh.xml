<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TasbeehFragment"
    android:background="@drawable/backgroundlight">

    <TextView
        android:id="@+id/Islami"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="18dp"
        android:text="@string/islamiAR"
        android:fontFamily="@font/nabi"
        android:textColor="@color/light_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/head_seb7a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:src="@drawable/head_sebha_logo"
        app:layout_constraintEnd_toEndOf="@id/body_seb7a"
        app:layout_constraintStart_toStartOf="@id/body_seb7a"
        app:layout_constraintTop_toBottomOf="@id/Islami" />

    <ImageView
        android:id="@+id/body_seb7a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_seb7a"
        android:src="@drawable/body_sebha_logo"/>
    <TextView
        android:id="@+id/counterNameTasbihTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_marginTop="18dp"
        android:text="@string/CounterTV"
        android:fontFamily="@font/elmessirisemibold"
        android:textColor="@color/light_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/body_seb7a"/>
    <TextView
        android:id="@+id/counterNumberTasbihTv"
        android:layout_width="69dp"
        android:layout_height="81dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="18dp"
        android:text="0"
        android:textColor="@color/light_black"
        android:background="@drawable/textview_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/counterNameTasbihTv"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/AzkarButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="25dp"
        android:text="@string/Azkar"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:onClick="AzkarButton"
        android:fontFamily="@font/jfflatregular"
        android:background="@drawable/button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/counterNumberTasbihTv"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>